extends ../shared/template

block content
  h1.title

  #page-container
    .row
      .col-md-2
        #menu-container
          .head-shot-div
            .head-shot-image
              if(user.photos.length)
                each photo,i in user.photos
                  if(photo.isPrimary)
                    img#profile-photo(src=photo.path)
              else
                img#profile-photo(src='/img/default-user.png')

          .proifle-wrapper
            .info
                ul.info
                  p.btn.btn-default Tasks
                ul.info
                  p.btn.btn-default Search #{user.zipcode}
                ul.info
                  a.btn.btn-default #{user.email}
                ul.info
                  if(user.isOwner(user._id))
                    a.btn.btn-default#edit(href='/users/#{user._id}/edit') edit profile
                ul.info
                  a.btn.btn-default(href='/users/#{user._id}/editPhotos') Add Photo


      .col-md-8
        .well#contentMenu
          .content-menu-box
            a#dashboard(href='/dashboard')
              h1.content-menu dashboard
            a#messages(href='/messages')
              h1.content-menu messages
            a#tasks(href='/tasks')
              h1.content-menu tasks
            a#search(href='/search')
              h1.content-menu search
